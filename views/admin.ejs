<%- include('partials/header') %>

    <button type="button" class="btn btn-primary m-3 p-2" data-toggle="modal" data-target="#pat_register">
        Register New Doctor
    </button>

    <h3>Doctor</h3>
    <div class="row jic">

        <%for(i in doc_names){%>
            <div class="m-4 border border-primary p-2 shadow-lg">
                <form action="/register" method="post">
                    <h4>
                        <%= doc_names[i] %>
                    </h4>
                    <input type="hidden" name="op" value="del">
                    <input type="hidden" name="catagory" value="doctor">
                    <button type="submit" class="btn btn-primary m-2 p-2" value="<%= doc_names[i] %>"
                        name="username">Delete</button>

                </form>
            </div>
            <%}%>

    </div>
    <h3>Patient</h3>
    <div class="row jic">

        <%for(i in pat_names){%>
            <div class="m-4 border border-primary p-2 shadow-lg">
                <form action="/register" method="post">
                    <h4>
                        <%= pat_names[i] %>
                    </h4>
                    <input type="hidden" name="op" value="del">
                    <input type="hidden" name="catagory" value="patient">
                    <button type="submit" class="btn btn-primary m-3 p-2" value="<%= pat_names[i] %>"
                        name="username">Delete</button>
                </form>
            </div>
            <%}%>
    </div>







    <form action="/register" method="post">
        <div class="modal fade" id="pat_register" tabindex="-1" aria-labelledby="" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="">Doctor Resgisteration</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">Username<span class="text-danger">*</span></label>
                            <input class="form-control" maxlength="20" required type="email" name="username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password<span class="text-danger">*</span></label>
                            <input class="form-control" maxlength="20" required type="password" name="password">
                        </div>
                        <div class="form-group">
                            <label for="mail">Email Account<span class="text-danger">*</span></label>
                            <input class="form-control" maxlength="30" required type="email" name="mail">
                        </div>
                        <div class="form-group">
                            <label for="fname">First Name<span class="text-danger">*</span></label>
                            <input class="form-control" maxlength="20" required type="text" name="fname">
                        </div>
                        <div class="form-group">
                            <label for="lname">Last Name<span class="text-danger">*</span></label>
                            <input class="form-control" maxlength="20" required type="text" name="lname">
                        </div>
                        <div class="form-group">
                            <label for="dob">Enter Date Of Birth<span class="text-danger">*</span></label>
                            <input class="form-control" maxlength="20" required type="date" name="dob">
                        </div>
                        <div class="form-group">
                            <label for="remarks">Special Remarks(Speciality in Any Field(s))</label>
                            <textarea class="form-control" class="form-control" type="text" row="5" col="10"
                                name="remarks"></textarea>
                        </div>
                        <input type="hidden" name="catagory" value="doctor">
                        <input type="hidden" name="op" value="add">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <%- include('partials/footer') %>