<%- include('partials/header') %>

    <div class="jumbtoron text-center">
        <h1 class="display-4">Rabac</h1>
        <h3>The Medical Data Tracker</h3>
    </div>

    <div class="continer ">
        <% if(color==1){ %>
            <h3 class="display-5 text-center m-3 text-bolder text-danger">
                <%= status %>
            </h3>
            <%}else{%>
                <h3 class="display-5 text-center m-3 text-bolder text-success">
                    <%= status %>
                </h3>
                <%}%>

                    <div class="row">
                        <div class="col-6 py-3 px-5 ">
                            <h2 class="text-center">Doctor Login</h2>
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label for="username">UserName : </label>
                                    <input required type="email" name="username" class="form-control">
                                    <input type="hidden" value="doctor" name="catagory">
                                </div>
                                <div class="from-group">
                                    <label for="passowrd">Password : </label>
                                    <input required type="password" name="password" class="form-control">
                                </div>
                                <button class="btn btn-primary my-3" name="login-btn" value="doctor"
                                    action="submit">SUBMIT
                                </button>
                            </form>
                        </div>
                        <div class="col-6 py-3 px-5 ">
                            <h2 class="text-center">Patient Login</h2>
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label for="username">UserName : </label>
                                    <input required type="email" name="username" class="form-control">
                                    <input type="hidden" value="patient" name="catagory">
                                </div>
                                <div class="from-group">
                                    <label for="passowrd">Password : </label>
                                    <input required type="password" name="password" class="form-control">
                                </div>
                                <button class="btn btn-primary my-3" name="login-btn" action="submit">SUBMIT </button>
                                <button type="button" class="btn btn-dark" data-toggle="modal"
                                    data-target="#pat_register">
                                    Register New Patient
                                </button>

                            </form>
                        </div>
                    </div>
    </div>

    <!-- Button trigger modal -->

    <!-- Modal -->
    <form action="/register" method="post">
        <div class="modal fade" id="pat_register" tabindex="-1" aria-labelledby="" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="">Patient Resgisteration</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input class="form-control" required type="email" name="username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control" required type="password" name="password">
                        </div>
                        <div class="form-group">
                            <label for="mail">Email Account</label>
                            <input class="form-control" required type="email" name="mail">
                        </div>
                        <div class="form-group">
                            <label for="fname">First Name</label>
                            <input class="form-control" required type="text" name="fname">
                        </div>
                        <div class="form-group">
                            <label for="lname">Last Name</label>
                            <input class="form-control" required type="text" name="lname">
                        </div>
                        <div class="form-group">
                            <label for="dob">Enter Date Of Birth</label>
                            <input class="form-control" required type="date" name="dob">
                        </div>
                        <div class="form-group">
                            <label for="remarks">Special Remarks(Previous Medical Conditions if any)</label>
                            <textarea class="form-control" class="form-control" type="text" row="5" col="10"
                                name="remarks"></textarea>
                        </div>
                        <input type="hidden" name="catagory" value="patient">
                        <input type="hidden" name="op" value="add">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
