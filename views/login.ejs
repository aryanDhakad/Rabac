<%- include('partials/header') %>

    <input type="hidden" name="alert_stat" value="<%=status %>">

    <div class="jumbtoron text-center mb-3 ">
        <!-- <img src="css/logo1.png" style="height: 100%;" alt="nf" class=""> -->
        <h1 class=" display-4">Rabac</h1>
        <h3>The Medical Data Tracker</h3>
    </div>

    <div class="continer my-4 shadow-lg py-5">

        <div class="row">
            <div class="col-6 py-3 px-5 ">
                <h2 class="text-center">Doctor Login</h2>
                <div class="login-form shadow-lg">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="username">Username <span class="text-danger">*</span> </label>
                            <input required type="email" name="username" class="form-control">
                            <input type="hidden" value="doctor" name="catagory">
                        </div>
                        <div class="from-group">
                            <label for="passowrd">Password <span class="text-danger">*</span> </label>
                            <input required type="password" name="password" class="form-control">
                        </div>
                        <button class="btn btn-primary px-3 py-2 my-3" name="login-btn" value="doctor"
                            action="submit">SUBMIT
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-6 py-3 px-5 ">
                <h2 class="text-center">Patient Login</h2>
                <div class="login-form shadow-lg">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="username">Username <span class="text-danger">*</span> </label>
                            <input required type="email" name="username" class="form-control">
                            <input type="hidden" value="patient" name="catagory">
                        </div>
                        <div class="from-group">
                            <label for="passowrd">Password <span class="text-danger">*</span> </label>
                            <input required type="password" name="password" class="form-control">
                        </div>
                        <button class="btn btn-primary px-3 py-2 my-3" name="login-btn" action="submit">SUBMIT
                        </button>
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#pat_register">
                            Register New Patient
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Button trigger modal -->

    <!-- Modal -->
    <form action="/register" method="post">
        <div class="modal fade" id="pat_register" tabindex="-1" aria-labelledby="" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="">Patient Resgisteration</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">Username <span class="text-danger">*</span> </label>
                            <input class="form-control" maxlength="20" required type="email" name="username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password <span class="text-danger">*</span> </label>
                            <input class="form-control" maxlength="20" required type="password" name="password">
                        </div>
                        <div class="form-group">
                            <label for="mail">Email Account <span class="text-danger">*</span> </label>
                            <input class="form-control" maxlength="40" required type="email" name="mail">
                        </div>
                        <div class="form-group">
                            <label for="fname">First Name <span class="text-danger">*</span> </label>
                            <input class="form-control" maxlength="20" required type="text" name="fname">
                        </div>
                        <div class="form-group">
                            <label for="lname">Last Name <span class="text-danger">*</span> </label>
                            <input class="form-control" maxlength="20" required type="text" name="lname">
                        </div>
                        <div class="form-group">
                            <label for="dob">Enter Date Of Birth <span class="text-danger">*</span> </label>
                            <input class="form-control" required type="date" name="dob">
                        </div>
                        <div class="form-group">
                            <label for="remarks">Special Remarks(Previous Medical Conditions if any) </label>
                            <textarea class="form-control" class="form-control" type="text" row="5" col="10"
                                name="remarks"></textarea>
                        </div>
                        <input type="hidden" name="catagory" value="patient">
                        <input type="hidden" name="op" value="add">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
