<%- include('partials/header') %>

    <div class="container">


        <h1>Doctor Page</h1>
        <h3>
            Username : <%= doc_data.username%>
        </h3>
        <h4>
            Full Name: <%= doc_data.fname%>
                <%= doc_data.lname%>
        </h4>
        <h4>
            DOB : <%= doc_data.dob %>
        </h4>
        <h4>
            Specility : <%= doc_data.remarks %>
        </h4>
        <form action="/" method="get">
            <button type="submit" class="btn btn-primary m-3 p-2"> Logout </button>
        </form>
    </div>


    <div class="d-flex flex-wrap flex-row">
        <%pat_names.forEach(name=> {%>
            <form action="/get_pat_data" method="post">
                <input type="hidden" name="doc_name" value="<%=doc_data.username%>">
                <input type="hidden" name="names" value="<%=json_pat_names%>">
                <button class="btn btn-primary m-3" value="<%=name %>" type="submit" name="pat_name">
                    <%= name %>
                </button>
            </form>
            <%})%>
    </div>
    <div class="container">
        <h3>Username : <%= data.username %>
        </h3>
        <h3>
            Name : <%= data.fname %>
                <%= data.lname %>
        </h3>
        <h4>DOB : <%= data.dob %>
        </h4>
        <h4>Special Remarks : <%= data.remarks %>
        </h4>
        <h4> Last Visit : <%= data.last_visit %>
                <h4>

    </div>
    <div class="d-flex flex-wrap flex-row">
        <% for(i in pat_data){%>
            <button onClick="show_data('<%= pat_data[i]%>')" class="btn btn-success m-3">
                <%= i %>
            </button>
            <%}%>
    </div>

    <div class="container">
        <canvas id="chart2-0" width="300" height="100"></canvas>
        <canvas id="chart2-1" width="300" height="100"></canvas>
        <canvas id="chart2-2" width="300" height="100"></canvas>
    </div>






    <%- include('partials/footer') %>