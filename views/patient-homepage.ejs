<%- include('partials/header') %>



    <div class="details-card">
        <h3 style="position: absolute; left: 10% ; top: -10%; background-color:white;" class="px-3">Patient Details</h3>
        <div class="row">
            <div class="col-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Username : <%= data.username %>
                    </li>
                    <li class="list-group-item">Name : <%= data.fname %>
                            <%= data.lname %>
                    </li>
                    <li class="list-group-item">DOB : <%= data.dob %>
                    </li>
                </ul>
            </div>
            <div class="col-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Special Remarks : <%= data.remarks %>
                    </li>
                    <li class="list-group-item">Mail Account : <%= data.account %>
                    </li>
                    <li class="list-group-item">Last Visit : <%= data.last_visit %>
                    </li>
                </ul>
            </div>
        </div>

        <div class="submit_button mx-5">
            <form action="/submit_data" method="post">
                <input type="hidden" name="username" value=<%=data.username %>>
                <input type="hidden" name="data">
                <input type="hidden" name="date">
                <button class="btn btn-primary btn-lg rounded-pill px-5 fs-2" onClick="show()">Submit</button>
            </form>
        </div>

    </div>

    <div class="container">
        <h2>ECG</h2>
        <button class="btn btn-success" onClick="start(0,'Heart_Beat',50,0)">Start</button>
        <button class="btn btn-danger" onClick="end(0,'Heart_Beat')">End</button>
        <div class="" id="chart-rt-0"></div>
        <canvas id="chart2-0" width="300" height="100"></canvas>
    </div>
    <div class="container">
        <h2>Pulse</h2>
        <button class="btn btn-success" onClick="start(1,'Pulse_Beat',50,0)">Start</button>
        <button class="btn btn-danger" onClick="end(1,'Pulse_Beat')">End</button>
        <div class="" id="chart-rt-1"></div>
        <canvas id="chart2-1" width="300" height="100"></canvas>
    </div>
    <div class="container">
        <h2>Sample</h2>
        <button class="btn btn-success" onClick="start(2,'Sample_Beat',50,0)">Start</button>
        <button class="btn btn-danger" onClick="end(2,'Sample_Beat')">End</button>
        <div class="" id="chart-rt-2"></div>
        <canvas id="chart2-2" width="300" height="100"></canvas>
    </div>





    <%- include('partials/footer') %>